{% extends 'layout.html.twig' %}

{% block body %}

    <section class="one">
        <div class="inner">

            <h1>Media list</h1>

            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>localisation</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for medium in media %}
                    <tr>
                        <td><a href="{{ path('media_show', { 'id': medium.id }) }}">{{ medium.id }}</a></td>
                        <td>{{ medium.name }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('media_show', { 'id': medium.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('media_edit', { 'id': medium.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('media_new') }}">Create a new medium</a>
                </li>
            </ul>
        </div>
    </section>
{% endblock %}
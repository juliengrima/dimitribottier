<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <title>DimitriBittier - {% block title %}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <noscript><link rel="stylesheet" href="{{ asset('assets/stylesheet/forty/noscript.css') }}" /></noscript>
        {#<link rel="stylesheet" href="{{ asset('assets/stylesheet/forty/font-awesome.min.css') }}" />#}
        <script defer src="https://use.fontawesome.com/releases/v5.7.0/js/all.js" integrity="sha384-qD/MNBVMm3hVYCbRTSOW130+CWeRIKbpot9/gR1BHkd7sIct4QKhT1hOPd+2hO8K" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css?family=Satisfy" rel="stylesheet">
        {% block mainCSS %}
        <link rel="stylesheet" href="{{ asset('assets/stylesheet/forty/main.css') }}" />
        {% endblock %}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body class="is-preload">

    {% block header %}
    {% endblock %}

    {% block body %}{% endblock %}

    {% block footer %}
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('assets/javascript/forty/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/javascript/forty/jquery.scrolly.min.js') }}"></script>
        <script src="{{ asset('assets/javascript/forty/jquery.scrollex.min.js') }}"></script>
        <script src="{{ asset('assets/javascript/forty/browser.min.js') }}"></script>
        <script src="{{ asset('assets/javascript/forty/breakpoints.min.js') }}"></script>
        <script src="{{ asset('assets/javascript/forty/util.js') }}"></script>
    {% endblock %}

    {% block mainJS %}
        <script src="{{ asset('assets/javascript/forty/main.js') }}"></script>
    {% endblock %}

    </body>
</html>

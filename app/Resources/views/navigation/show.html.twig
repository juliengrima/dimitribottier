{% extends 'base.html.twig' %}

{% block body %}
    <h1>Navigation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ navigation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ navigation.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ navigation.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ navigation.price }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ navigation.time }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('navigation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('navigation_edit', { 'id': navigation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
